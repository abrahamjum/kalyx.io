<!DOCTYPE html>
<html>
  <head>
    <title>Kalyx</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-center" id="navbarColor01">
        <ul class="navbar-nav navbar-left">
          <li class="nav-item">
            <a><%= link_to "Brands", brands_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item">
            <a><%= link_to "Listings", listings_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item">
            <a><%= link_to "Products", products_path, class:'nav-link' %></a>
          </li>
        </ul>
        <a><%= link_to "KALYX", root_path, class:'navbar-brand navbar-center' %></a>
        <ul class="navbar-nav navbar-right">
          <li class="nav-item">
            <a><%= link_to "Login", new_user_session_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item">
            <a><%= link_to "Signup", new_user_registration_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item">
            <a><%= link_to "Contact", contact_path, class:'nav-link' %></a>
          </li>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
