<!DOCTYPE html>
<html>
  <head>
    <title>Kalyx</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a><%= link_to "Log In", new_user_session_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item">
            <a><%= link_to "Sign Up", new_user_registration_path, class:'nav-link' %></a>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <a><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:'nav-link' %></a>
          </li>
          <% end %>
          <li class="nav-item">
            <a><%= link_to "Products", products_path, class:'nav-link' %></a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Brands
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Company A</a>
              <a class="dropdown-item" href="#">Company B</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Company C</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
